<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ayabg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/allroundbg"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="50dp"
            android:src="@drawable/applogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_light"
        android:text="SEARCH FOR ANYTHING"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <RelativeLayout
        android:alpha="0"
        android:id="@+id/marketing_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        >
        <TextView
            android:id="@+id/marketing_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="from more than"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/marketing_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/marketing_line_1"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="38 LANGUAGES"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />
    </RelativeLayout>

    <Button
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:id="@+id/go_to_next"
        android:alpha="0"
        android:fontFamily="@font/montserrat_light"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="00dp"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_learn"
        android:text="Continue Your Hunt for Knowledge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>